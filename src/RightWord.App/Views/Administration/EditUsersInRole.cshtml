@model List<UserRoleViewModel>

@{
    var Id = ViewBag.Id;
}
<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Add or remove users from this role</h2>
            </div>
            <vc:Summary></vc:Summary>

            <div class="card-body">
                <table id="table" class="table"
                       data-toggle="table"
                       @*data-height="500"*@
                       data-filter="true"
                       data-show-pagination-switch="true"
                       data-pagination="true"
                       data-show-footer="true"
                       @*data-show-columns="true"*@
                       data-page-list="[10, 25, 50, 100, all]"
                       data-filter-control="true"
                       data-show-print="true"
                       @*data-show-export="true"*@
                       data-click-to-select="true"
                       @*data-toolbar="#toolbar"*@
                       @*data-show-toggle="true"*@
                       data-show-search-clear-button="true">
                    <thead>
                        <tr>
                            <th data-width="60"></th>
                            <th class="checkbox" data-width="60" data-field="IsSelected" data-sortable="true"></th>
                            <th data-field="UserName" data-filter-control="input" data-sortable="true">
                                Email
                            </th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@Model[i].UserId" asp-route-roleId="@Id"
                                       onclick="return confirm('Are you sure you want to delete user: @Model[i].UserName')"><span class="fa fa-trash-alt"></span></a>
                                </td>
                                <td class="checkbox">
                                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                </td>
                                <td>
                                    @Model[i].UserName
                                    <input hidden asp-for="@Model[i].UserName" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @*@for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check m-1">


                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }*@
            </div>
            <div class="card-footer">
                <a asp-action="Index"
                   class="btn btn-primary" style="width:auto"><i class="fas fa-angle-double-left"></i></a>
                <input type="submit" value="Update" class="btn btn-primary"
                       style="width:auto" />
            </div>
        </div>
    </form>
</div>