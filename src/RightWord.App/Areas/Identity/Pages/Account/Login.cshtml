@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@**@
<div class="container">
    @*  *@
    <section>
        <form id="account" method="post" class="form-signin">
            @*            *@
            <h2 class="form-signin-heading" style=color:whitesmoke>
                <img src="~/images/rebrandrightword.png" width="300" height="110" alt="RightWord Institute" />
            </h2>
            @*  *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="sr-only" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="sr-only" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn  btn-success btn-block btn-login">Log in</button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
