@model RightWord.App.ViewModels.AgencyViewModel

@{
    ViewData["Title"] = "Edit Agency";
}

<div class="container">
    <h1>Edit Agency</h1>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <vc:Summary></vc:Summary>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LegalName" class="control-label"></label>
                            <input asp-for="LegalName" class="form-control" />
                            <span asp-validation-for="LegalName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BusinessOwner" class="control-label"></label>
                            <input asp-for="BusinessOwner" class="form-control" />
                            <span asp-validation-for="BusinessOwner" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BusinessRegistration" class="control-label"></label>
                            <input asp-for="BusinessRegistration" class="form-control" />
                            <span asp-validation-for="BusinessRegistration" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Country" class="control-label"></label>
                            <select asp-for="Country" class="form-control" asp-items="@(new SelectList(Model.Countries, "Key", "Value").OrderBy(x =>x.Value))">
                                <option></option>
                            </select>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ZipCode" class="control-label"></label>
                            <input asp-for="ZipCode" class="form-control" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="StudentNationalities" class="control-label"></label>
                            <input asp-for="StudentNationalities" class="form-control" placeholder="Separate by commas"/>
                            <span asp-validation-for="StudentNationalities" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                }
                else
                {
                    <div hidden class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
